<div class="m-t-lg">
  
  <!-- CATGEORIES -->  
  <!-- Title -->
  <div>
    <div class="row m-b">
      <div class="col-md-12">
        <h3 class="txt-green" translate>{{ 'categories' }}</h3>
      </div>
    </div>
    
    <!-- Add element -->
    <div class="row m-b">
      <div class="col-md-12">
        <button type="button" class="btn-profile btn-small btn-medium" ng-click="addElement('category')">
          <i class="fa fa-plus m-r"></i>
          <span translate>{{ 'add_a_category' }}</span>
        </button>
      </div>
    </div>

    <!-- Table -->
    <div class="row m-b">
      <div class="col-md-12">
        <table class="table table-profile">
          <thead>
            <tr>
              <th style="width:80%" translate>{{ 'name' }}</th>
              <th style="width:20%"></th>
            </tr>
          </thead>
          <tbody>
            <tr ng-repeat="category in categories">
              <td>
                <span editable-text="category.name" e-cols="100" e-name="name" e-form="rowform" e-required>
                  {{ category.name }}
                </span>
              </td>
              <td>
                <!-- form -->
                <div class="table-align-right">
                  <form editable-form name="rowform" onbeforesave="saveElement('category', $data, category.id)" ng-show="rowform.$visible" class="form-buttons form-inline" shown="inserted.category == category">
                    <button type="submit" ng-disabled="rowform.$waiting" class="btn btn-warning">
                      <i class="fa fa-check"></i>
                    </button>
                    <button type="button" ng-disabled="rowform.$waiting" ng-click="cancelElement('category', rowform, $index)" class="btn btn-default">
                      <i class="fa fa-times"></i>
                    </button>
                  </form>
                </div>
                <div class="table-align-right" ng-show="!rowform.$visible">
                  <button class="btn btn-profile btn-small btn-ultralight" ng-click="rowform.$show()">
                    <i class="fa fa-edit"></i> <span class="hidden-xs hidden-sm" translate>{{ 'edit' }}</span>
                  </button>
                  <button class="btn btn-danger" ng-click="removeElement('category', $index)">
                    <i class="fa fa-trash-o"></i>
                  </button>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>


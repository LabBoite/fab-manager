<div class="m-t-lg">

    <!-- PRICES -->  
    <!-- Title -->
    <div class="m-t-lg">
      <div class="row m-b">
        <div class="col-md-12">
          <h3 class="txt-green" translate>{{ 'prices_categories' }}</h3>
        </div>
      </div>
      
      <!-- Add element -->
      <div class="row m-b">
        <div class="col-md-12">
          <button type="button" class="btn-profile btn-small btn-medium" ng-click="newPriceCategory()">
            <i class="fa fa-plus m-r"></i>
            <span translate>{{ 'add_a_price_category' }}</span>
          </button>
        </div>
      </div>

      <!-- Table -->
      <div class="row m-b">
        <div class="col-md-12">
          <table class="table">
            <thead>
            <tr>
              <th style="width:40%" translate>{{ 'name' }}</th>
              <th style="width:40%" translate>{{ 'usages_count' }}</th>
              <th style="width:20%"></th>
            </tr>
            </thead>
            <tbody>
            <tr ng-repeat="category in priceCategories">
              <td>{{ category.name }}</td>
              <td>{{ category.events }}</td>
              <td>
                <div class="table-align-right">
                  <button class="btn btn-profile btn-small btn-ultralight" ng-click="editPriceCategory(category.id, $index)">
                    <i class="fa fa-edit"></i> <span class="hidden-xs hidden-sm" translate>{{ 'edit' }}</span>
                  </button>
                  <button class="btn btn-danger" ng-click="removePriceCategory(category.id, $index)">
                    <i class="fa fa-trash-o"></i>
                  </button>
                </div>
              </td>
            </tr>
            </tbody>
          </table>
        </div>
      </div>

</div>
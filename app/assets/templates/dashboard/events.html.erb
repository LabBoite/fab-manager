<section class="container wrapper">
  <div class="col-lg-12">
    <div class="row">
      
      <div class="hidden-xs hidden-sm col-md-3 col-lg-3">
          <ng-include src="'<%= asset_path 'dashboard/nav.html' %>'"></ng-include>
      </div>

      <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
        <h1 class="txt-green">{{ 'my_events' | translate }}</h2>
        
        <div class="row">
          <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <h5>{{ 'your_previous_events' | translate }}</h5>
            <div ng-if="user.events_reservations.length > 0">
              <div class="event-item" ng-repeat="r in user.events_reservations | eventsReservationsFilter:'passed'">
                  <div class="event-content">
                    <div class="event-icon"><i class="fa fa-gear"></i></div>
                    <div class="event-data">
                      <span class="event-name">{{r.reservable.title}}</span><br/>
                      <span class="event-date">{{ r.start_at | amDateFormat:'LLL' }} - {{ r.end_at | amDateFormat:'LT' }}</span>
                    </div>
                  </div>
              </div>
            </div>
            <div class="event-item" ng-if="(user.events_reservations | eventsReservationsFilter:'passed').length == 0" translate>
                {{ 'no_passed_events' }}
            </div>
          </div>
          <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <h5>{{ 'your_next_events' | translate }}</h5>
            <div ng-if="user.events_reservations.length > 0">
              <div class="event-item" ng-repeat="r in user.events_reservations | eventsReservationsFilter:'future'">
                <div class="event-content">
                  <div class="event-icon"><i class="fa fa-gear"></i></div>
                  <div class="event-data">
                    <span class="event-name">{{r.reservable.title}}</span><br/>
                    <span class="event-date">{{ r.start_at | amDateFormat:'LLL' }} - {{ r.end_at | amDateFormat:'LT' }}</span>
                  </div>
                </div>
              </div>
            </div>
            <div class="event-item" ng-if="(user.events_reservations | eventsReservationsFilter:'future').length == 0" translate>
              {{ 'no_events_to_come' }}
            </div>
          </div>
        </div>

      </div>

    </div>
  </div>
</section>

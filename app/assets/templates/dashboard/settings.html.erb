<section class="container wrapper">
  <div class="col-lg-12">
    <div class="row">
      
      <div class="hidden-xs hidden-sm col-md-3 col-lg-3">
          <ng-include src="'<%= asset_path 'dashboard/nav.html' %>'"></ng-include>
      </div>

      <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 min-h">
        <h1 class="txt-green m-b">{{ 'my_settings' | translate }}</h2>

        <form role="form" name="userForm" class="form-horizontal" novalidate  action="{{ actionUrl }}" ng-upload="submited(content)" upload-options-enable-rails-csrf="true">
          <section class="panel" ng-if="hasSsoFields()">
            <div class="panel-body p-lg">
              <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <a class="btn btn-default btn-profile btn-medium" ng-href="{{activeProvider.link_to_sso_profile}}" target="_blank">
                  <i class="fa fa-edit"></i> {{ 'edit_profile.change_my_data' | translate }}
                </a>
                <p>{{ 'edit_profile.once_your_data_are_up_to_date_' | translate }} <strong translate>{{ 'edit_profile._click_on_the_synchronization_button_opposite_' }}</strong>  {{ 'edit_profile.or' | translate}} <strong translate>{{ 'edit_profile._disconnect_then_reconnect_' }}</strong> {{ 'edit_profile._for_your_changes_to_take_effect' | translate }}</p>
              </div>
              <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <a class="btn btn-default btn-profile btn-medium" ng-click="syncProfile()">
                  <i class="fa fa-refresh"></i> {{ 'edit_profile.sync_my_profile' | translate }}
                </a>
              </div>
            </div>
          </section>
          <section class="panel m-b-none">
            <div class="panel-body p-lg">
              <ng-include src="'<%= asset_path 'shared/_member_form.html' %>'"></ng-include>
            </div>
          </section>
          <div class="panel-footer no-padder">
            <input type="submit" value="{{ 'edit_profile.confirm_changes' | translate }}" class="btn-big btn-block btn-profile btn-medium" ng-disabled="userForm.$invalid"/>
          </div>
        </form>

        <div class="m-t" ng-hide="isSuperAdmin">
          <button class="btn btn-default btn-block text-white btn-danger" ng-click="deleteUser(user)"><i class="fa fa-warning m-r-xs"></i> {{ 'edit_profile.delete_my_account' | translate }}</button>
        </div>
      </div>

    </div>
  </div>
</section>
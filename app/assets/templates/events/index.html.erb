<!-- NAV -->
<div class="nav-tabs-text nav-public">
  <div class="container">
    <ul>
      <li class="active">
        <a>ateliers et rencontres</a>
      </li>
      <li>
        <a ui-sref="app.public.trainings_list" uib-tab-heading-transclude="" class="ng-binding">initiations</a>
      </li>
    </ul>
  </div>
</div>

<section class="container wrapper">
  <div class="col-lg-12">

    <!-- EVENT LIST -->
    <div ng-repeat="month in monthOrder">
      <div class="row" ng-repeat="event in (eventsGroupByMonth[month].length/4 | array)">
        
        <!-- Event card -->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3" ng-repeat="event in events.slice(4*$index, 4*$index + 4)" ng-click="showEvent(event)">
          <div class="card" ui-sref="app.public.events_show({id: event.id})">
            <div class="card-header" style="background-image: url('/thumbnail_blank.png'); background-size: cover; background-repeat: no-repeat; background-position: center;">
              <div class="card-header-bg-m" style="background-image: url({{event.event_image_small}});"></div>
            </div>
            <div class="card-body">
              <div class="card-data m-b-xs">{{event.category.name}}</div> 
              <div class="card-title">{{event.title}}</div> 
              <div class="card-subtitle" ng-if="event.event_themes.length > 0">{{event.event_themes[0].name}}</div> 
            </div>
          </div>
        </div>

      </div>
    </div>

    <div class="row">
      <div class="col-lg-12 text-center m-t-md">
        <a class="btn-small btn-public btn-light" ng-click="loadMoreEvents()" ng-hide="noMoreResults" translate>{{ 'load_the_next_events' }}</a>
      </div>
    </div>

  </div>
</section>


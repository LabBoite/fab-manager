<!-- INTRO -->
<div class="hero-global">
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="container">
      <div class="hero-content">
        <div class="hero-claim">
          LabBoîte est un atelier de <span class="font-bold">conception</span><br/> et de <span class="font-bold">fabrication partagé<span>
        </div>
        <a ui-sref="app.public.place" class="btn btn-public btn-default btn-medium">{{ 'more_info' | translate }}</a>
      </div>
    </div>
  </div>
</div>

<section class="container m-t">
  <div class="col-lg-12"> 
    <div class="alert alert-warning text-center" ng-if="(homeBlogpost != null) && (homeBlogpost != '') && (homeBlogpost != undefined)">
      <span ng-bind-html="homeBlogpost"></span>
    </div>
  </div>
</section>

<!-- NEXT EVENTS -->
<section class="container wrapper">
  <div class="col-lg-12">
    <h2 class="txt-orange m-b">{{ 'fablab_s_next_events' | translate }}</h2>
    <div class="row" ng-repeat="event in (upcomingEvents.length/4 | array)">  
      
      <!-- Event card -->
      <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3" ng-repeat="event in upcomingEvents.slice(4*$index, 4*$index + 4)">
        <div class="card" ui-sref="app.public.events_show({id: event.id})">
          <div class="card-header" style="background-image: url('/thumb_blank.png'); background-size: cover; background-repeat: no-repeat; background-position: center;">
            <div class="card-header-bg-m" style="background-image: url({{event.event_image_medium}});"></div>
          </div>
          <div class="card-body">
            <div class="card-data m-t-xs" ng-hide="isOneDayEvent(event)">{{ 'from_date_to_date' | translate:{START:(event.start_date | amDateFormat:'LL'), END:(event.end_date | amDateFormat:'LL')} }}</div> 
            <div class="card-data m-t-xs" ng-show="isOneDayEvent(event)">{{ 'on_the_date' | translate:{DATE:(event.start_date | amDateFormat:'LL')} }}</div> 
            <div class="card-title">{{event.title}}</div>
          </div>
        </div>  
      </div>

    </div>
    <a ui-sref="app.public.events_list" class="pull-right">{{ 'every_events' | translate }}</a>
  </div>
</section>


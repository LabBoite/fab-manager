<section class="container wrapper">
  <div class="col-lg-12">

    <!-- INTRO -->
    <h2 class="txt-orange m-b-sm">Espace fablab</h2>
    <p class="m-b">Ici, on construit, on fabrique, on teste ! Nous mettons à disposition des outils dédiés à la conception, à la fabrication et au prototypage. Son accès est réservé aux adhérents ainsi qu’aux projets des structures partenaires.</p>

    <!-- MACHINES LIST -->
    <div class="row" ng-repeat="machine in (machines.length/4 | array)">
      <!-- Machine card -->
      <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3" ng-repeat="machine in machines.slice(4*$index, 4*$index + 4)" ng-click="showMachine(machine)">
        <div class="card m-b">
          <div class="card-header" style="background-image: url('/thumbnail_blank.png'); background-size: cover; background-repeat: no-repeat; background-position: center;">
            <div class="card-header-bg-m" style="background-image:url({{machine.machine_image}});"></div>
          </div>
          <div class="card-body">
            <div class="card-title">{{machine.name}}</div> 
          </div>
        </div>
      </div>
    </div>

    <!-- ADMIN CONTROLS -->
    <a class="btn-profile btn-small btn-medium" ui-sref="app.admin.machines_new" role="button" ng-if="isAuthorized('admin')">
      <i class="fa fa-plus m-r-xs"></i> 
      <span translate>{{ 'machines_list.add_a_machine' }}</span>
    </a>

  </div>
</section>
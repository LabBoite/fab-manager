<!-- RESERVATION PROCESS -->
<div class="panel m-b-sm" ng-if="user && !events.modifiable && !events.moved">

  <!-- No selection -->
  <div class="panel-content p-l" ng-show="events.reserved.length == 0 && (!events.paid || events.paid.length == 0)">
    <i>{{ 'cart.select_one_or_more_slots_in_the_calendar' | translate:{SINGLE:limitToOneSlot}:"messageformat" }}</i>
  </div>

  <!-- Process -->
  <div class="panel-content p-l" ng-if="events.reserved.length > 0">
    <div class="m-b-sm">
      {{ 'cart.you_ve_just_selected_the_slot' | translate }}
    </div>
    <div class="resa-slot" ng-repeat="slot in events.reserved">
      <div class="p-l">
        <span class="resa-slot-data resa-process">{{ 'cart.datetime_to_time' | translate:{START_DATETIME:(slot.start | amDateFormat:'LLLL'), END_TIME:(slot.end | amDateFormat:'LT') } }}</span>
      </div>

      <!-- HIDDEN
      <div class="font-sbold">{{ 'cart.datetime_to_time' | translate:{START_DATETIME:(slot.start | amDateFormat:'LLLL'), END_TIME:(slot.end | amDateFormat:'LT') } }}</div>
      <div ng-show="isAdmin()" class="m-t">
        <label for="offerSlot" class="control-label m-r" translate>{{ 'cart.offer_this_slot' }}</label>
        <input bs-switch
                  ng-model="slot.offered"
                  id="offerSlot"
                  type="checkbox"
                  class="form-control"
                  switch-on-text="{{ 'yes' | translate}}"
                  switch-off-text="{{ 'no' | translate}}"
                  switch-animate="true"
                  switch-readonly="{{slot.isValid}}"/>
      </div>-->

      <div>
        <button class="btn btn-small btn-block btn-public btn-medium" ng-click="validateSlot(slot)" ng-if="!slot.isValid" translate>{{ 'cart.confirm_this_slot' }}</button>
        <a class="btn btn-small btn-block btn-neutral btn-dark" href="#" ng-click="removeSlot(slot, $index, $event)" ng-if="slot.isValid" translate>{{ 'cart.remove_this_slot' }}</a>
      </div>
    </div>

    <!-- HIDDEN
    <coupon show="isSlotsValid() && (!modePlans || selectedPlan)" coupon="coupon.applied" total="totalNoCoupon" user-id="{{user.id}}"></coupon>
    <div ng-hide="fablabWithoutPlans">
      <div ng-if="isSlotsValid() && !user.subscribed_plan" ng-show="!modePlans">
        <p class="font-sbold text-base l-h-2x" translate>{{ 'cart.to_benefit_from_attractive_prices' }}</p>
        <div><button class="btn btn-warning-full rounded btn-block text-xs" ng-click="showPlans()" translate>{{ 'cart.view_our_subscriptions' }}</button></div>
        <p class="font-bold text-base text-u-c text-center m-b-xs" translate>{{ 'cart.or' }}</p>
      </div>
      <div ng-if="selectedPlan">
        <div class="m-t-md m-b-sm text-base">{{ 'cart.you_ve_just_selected_a_' | translate }} <br> <span class="font-sbold" translate>{{ 'cart._subscription' }}</span> :</div>
        <div class="panel panel-default bg-light m-n">
          <div class="panel-body m-b-md">
            <div class="font-sbold text-u-c">{{selectedPlan | humanReadablePlanName }}</div>
            <div class="text-base">{{ 'cart.cost_of_the_subscription' | translate }} <span class="text-blue">{{selectedPlan.amount | currency}}</span></div>
          </div>
        </div>
      </div>
    </div>
    -->

  </div>

  <!-- Confirm -->
  <div class="panel-footer no-padder" ng-if="events.reserved.length > 0">
    <button class="btn btn-default btn-block btn-public btn-medium" ng-click="payCart()" ng-if="isSlotsValid() && (!modePlans || selectedPlan)">{{ 'cart.confirm_and_pay' | translate }}</button>
  </div>

</div>


<!-- RESERVATION SUCCESS -->
<div class="panel m-b-sm">
  <div class="panel-content p-l" ng-show="events.paid && events.paid.length > 0">
    <div class="m-b-sm">
      <p>{{ 'cart.you_have_settled_the_following_TYPE' | translate:{TYPE:reservableType}:"messageformat" }}</p>
    </div>
    <div class="resa-slot" ng-repeat="paidSlot in events.paid">
      <div class="p-l">
        <!--<span class="resa-slot-data"><strong>{{reservableName}}<strong></span><br/>-->
        <span class="resa-slot-data resa-success">{{ 'cart.datetime_to_time' | translate:{START_DATETIME:(paidSlot.start | amDateFormat:'LLLL'), END_TIME:(paidSlot.end | amDateFormat:'LT') } }}</span>
      </div>
    </div>

      <!-- HIDDEN
      <div ng-if="selectedPlan">
        <div class="m-t-md m-b-sm text-base">{{ 'cart.you_have_settled_a_' | translate }} <br> <span class="font-sbold" translate>{{ 'cart._subscription' }}</span> :</div>
        <div class="well well-warning m-t-sm">
          <i class="font-sbold  text-u-c">{{selectedPlan | humanReadablePlanName }}</i>
          <div class="font-sbold">{{ 'cart.cost_of_the_subscription' | translate }} {{selectedPlan.amount | currency}}</div>
        </div>
      </div>
      <div class="m-t-md font-sbold">{{ 'cart.total_' | translate }} {{amountPaid | currency}}</div>

      <!-- allow contact-->
      <div class="form-group">
        <label for="allowContact" class="help-cursor" title="{{ 'public_profile' | translate }}" translate>{{ 'i_authorize_Fablab_users_registered_on_the_site_to_contact_me' }}</label>
        <input bs-switch

<div>
  <section class="container wrapper">
    
    <div class="col-lg-12">

      <!-- TITLE -->
      <div class="row m-b">
        <div class="col-lg-12">
          <h1 class="txt-green" translate translate-values="{NAME: space.name}">{{ 'space_edit.edit_the_space_NAME' }}</h1>
        </div>
      </div>

      <!-- FORM -->
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-10 col-lg-8">
          <form role="form" name="spaceForm" action="{{ actionUrl }}" ng-upload="submited(content)" upload-options-enable-rails-csrf="true" unsaved-warning-form novalidate>
            <input name="_method" type="hidden" ng-value="method">
            <section class="panel">
              <div class="panel-body p-lg">
                <ng-include src="'<%= asset_path 'spaces/_form.html' %>'"></ng-include>
              </div>
              <div class="panel-footer no-padder">
                <input type="submit" value="{{ 'space_edit.validate_the_changes' | translate }}" class="btn-big btn-block btn-profile btn-medium" ng-disabled="spaceForm.$invalid"/>
              </div>
            </section>
          </form>
        </div>
      </div>

    </div>

  </section>
</div>
